<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MetalCalculateActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="155dp"
        android:layout_height="138dp"
        app:srcCompat="@mipmap/ic_launcher"
        tools:layout_editor_absoluteX="4dp"
        tools:layout_editor_absoluteY="3dp" />

    <Spinner
        android:id="@+id/metalSelect"
        android:layout_width="209dp"
        android:layout_height="32dp"
        app:layout_constraintLeft_toRightOf="@+id/imageView" />

    <Button
        android:id="@+id/addPictureBtn"
        android:layout_width="207dp"
        android:layout_height="48dp"
        android:text="Add Picture"
        tools:layout_editor_absoluteX="169dp"
        tools:layout_editor_absoluteY="48dp"
        app:layout_constraintTop_toBottomOf="@+id/readBarcodeBtn"
        app:layout_constraintLeft_toRightOf="@+id/imageView"
        android:onClick="takePicture"/>

    <Button
        android:id="@+id/readBarcodeBtn"
        android:layout_width="206dp"
        android:layout_height="45dp"
        android:text="Read Barcode"
        android:onClick="readBarcode"
        app:layout_constraintTop_toBottomOf="@+id/metalSelect"
        app:layout_constraintLeft_toRightOf="@+id/imageView" />

    <LinearLayout
        android:id="@+id/customFields"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintBottom_toTopOf="@+id/calculateBtn"
        android:orientation="vertical">
    </LinearLayout>

    <Button
        android:id="@+id/calculateBtn"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:text="Calculate"
        app:layout_constraintBottom_toTopOf="@+id/saveBtn" />

    <Button
        android:id="@+id/saveBtn"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:text="Save"
        android:onClick="savePieceInfo"
        app:layout_constraintBottom_toBottomOf="parent" />
</android.support.constraint.ConstraintLayout>