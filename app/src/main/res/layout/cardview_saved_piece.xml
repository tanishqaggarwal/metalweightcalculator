<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/shapeType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="shapeType"
            android:textAppearance="@android:style/TextAppearance.Material.Large" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="298dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/width_a"
                    android:layout_width="306dp"
                    android:layout_height="wrap_content"
                    android:text="pieceWidthDescription" />

                <TextView
                    android:id="@+id/width_w"
                    android:layout_width="304dp"
                    android:layout_height="wrap_content"
                    android:text="totalWeight" />

                <TextView
                    android:id="@+id/length"
                    android:layout_width="306dp"
                    android:layout_height="wrap_content"
                    android:text="pieceLength" />

                <TextView
                    android:id="@+id/weight"
                    android:layout_width="306dp"
                    android:layout_height="wrap_content"
                    android:text="pieceWeight" />

                <TextView
                    android:id="@+id/diameter_d"
                    android:layout_width="304dp"
                    android:layout_height="wrap_content"
                    android:text="totalWeight" />

                <TextView
                    android:id="@+id/diameter_s"
                    android:layout_width="306dp"
                    android:layout_height="wrap_content"
                    android:text="totalCost" />

                <TextView
                    android:id="@+id/internal_daimeter"
                    android:layout_width="306dp"
                    android:layout_height="wrap_content"
                    android:text="pieceWidthDescription" />

                <TextView
                    android:id="@+id/outer_daimeter"
                    android:layout_width="306dp"
                    android:layout_height="wrap_content"
                    android:text="pieceLength" />

                <TextView
                    android:id="@+id/side_a"
                    android:layout_width="306dp"
                    android:layout_height="wrap_content"
                    android:text="pieceWeight" />

                <TextView
                    android:id="@+id/side_b"
                    android:layout_width="304dp"
                    android:layout_height="wrap_content"
                    android:text="totalWeight" />

                <TextView
                    android:id="@+id/thickness"
                    android:layout_width="306dp"
                    android:layout_height="wrap_content"
                    android:text="totalCost" />

                <TextView
                    android:id="@+id/piece_input_value"
                    android:layout_width="306dp"
                    android:layout_height="wrap_content"
                    android:text="pieceWidthDescription" />

                <TextView
                    android:id="@+id/value_per_kg"
                    android:layout_width="306dp"
                    android:layout_height="wrap_content"
                    android:text="pieceLength" />

                <TextView
                    android:id="@+id/density"
                    android:layout_width="306dp"
                    android:layout_height="wrap_content"
                    android:text="pieceWeight" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:id="@+id/del_item"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    app:srcCompat="@android:drawable/ic_menu_delete" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>